<h1>Game of Life</h1>

<%= form_tag(play_games_path, method: :post, remote: true) do %>
  <%= label_tag :transform_count, "Transforms:" %>
  <%= text_field_tag :transform_count, 1, type: :number, min: 1 %>
  <%= submit_tag "Transform", class: "btn btn-primary" %>
<% end %>

<%= button_to 'Reset', reset_games_path, method: :post, data: { confirm: 'Are you sure you want to reset all cells?' } %>

<div id="cells-list">
  <%= render partial: 'cells_list', locals: { cells: @cells } %>
</div>